# API Configuration
# Copy this file to .env.local and customize for your environment

# Base URL for the API server
VITE_API_BASE_URL=http://localhost:5000/api/

# API request timeout in milliseconds (default: 10000)
VITE_API_TIMEOUT=10000

# Health check timeout in milliseconds (default: 5000)
VITE_API_HEALTH_TIMEOUT=5000

# Health check interval in milliseconds (default: 30000 = 30 seconds)
VITE_API_HEALTH_INTERVAL=30000

# Example for production:
# VITE_API_BASE_URL=https://api.bloqedex.com/v1
# VITE_API_HEALTH_INTERVAL=60000  # Check every minute in production

# Example for development (more frequent checks):
# VITE_API_HEALTH_INTERVAL=10000  # Check every 10 seconds for development
